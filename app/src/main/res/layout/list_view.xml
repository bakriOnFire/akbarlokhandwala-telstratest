<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:padding="10dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_news_title" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/tv_news_description"
              android:layout_marginBottom="10dp"
              android:text="Title"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_news_description"
              android:text="Description"
              app:layout_constraintTop_toBottomOf="@id/tv_news_title"
              app:layout_constraintStart_toStartOf="parent"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/iv_news_thumb" app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toBottomOf="@id/tv_news_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>