<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" android:id="@+id/cardView">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_news_title" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/tv_news_description"
                  app:layout_constraintRight_toLeftOf="@+id/iv_news_thumb"
                  android:layout_marginBottom="10dp"
                  android:text="Title"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/tv_news_description"
                  android:text="Description"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginRight="90dp"
                  app:layout_constraintTop_toBottomOf="@id/tv_news_title"
        />

        <com.android.volley.toolbox.NetworkImageView
                android:layout_width="80dp" android:layout_height="80dp"
                android:id="@+id/iv_news_thumb" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_news_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>